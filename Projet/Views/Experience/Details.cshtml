@model Projet.Models.ExperienceModels

@{
    ViewBag.Title = "Details";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>The Story - Free Bootstrap Theme</title>
    <!--
    The Story Theme
    http://www.templatemo.com/tm-480-story
    -->
    <!-- load stylesheets -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,300italic,400">  <!-- Google web font "Open Sans" -->
    <link rel="stylesheet" href=@Url.Content("~/Content/cssPage/bootstrap.min.css")>                                                <!-- Bootstrap style -->
    <link rel="stylesheet" href=@Url.Content("~/Content/cssPage/flexslider.css")>                                                   <!-- Flexslider style -->
    <link rel="stylesheet" href=@Url.Content("~/Content/cssPage/templatemo-style.css")>
</head>
<body class="page">
    <div id="body-bg">
        <ul class="social-icons pull-right hidden-xs">
            <li class="social-rss">
                <a href="#" target="_blank" title="RSS"></a>
            </li>
            <li class="social-twitter">
                <a href="#" target="_blank" title="Twitter"></a>
            </li>
            <li class="social-facebook">
                <a href="https://www.facebook.com/groups/1391877770839774/?fref=ts" target="_blank" title="Facebook"></a>
            </li>
            <li class="social-googleplus">
                <a href="#" target="_blank" title="GooglePlus"></a>
            </li>
        </ul>

        <div id="pre-header" class="container" style="height:340px">
        </div>

        <div id="header">
            <div class="container">
                <div class="row">
                    <!-- Logo -->
                    <div class="logo">
                        <a href="index.html" title="">
                            <img src=@Url.Content("~/Content/img/logo.png") alt="Logo" />
                        </a>
                    </div>
                    <!-- End Logo -->
                </div>
            </div>
        </div>
    </div>
    <!-- Top Menu -->
    <div id="hornav" class="container no-padding">
        <div class="row">
            <div class="col-md-12 no-padding">
                <div class="text-center visible-lg">
                    <ul id="hornavmenu" class="nav navbar-nav">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Experience", "Index", "Experience")
                        </li>
                        <li>
                            @Html.ActionLink("Offers", "Index", "Offer")
                        </li>
                        <li>
                            @Html.ActionLink("Events", "Index", "Event")
                        </li>
                        <li>
                            @Html.ActionLink("Contact", "Contact", "Home")
                        </li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Top Menu -->
    <br />
    <br />
    <!-- background images -->
    <div class="page-bg-imgs-list">
        <img src=@Url.Content("~/Content/img/sample_bg.jpg") id="page-1-img" class="main-img" alt="About">
        <img src=@Url.Content("~/Content/img/sample_bg.jpg") id="page-2-img" alt="Gallery">
        <img src=@Url.Content("~/Content/img/sample_bg.jpg") id="page-3-img" alt="Services">
        <img src=@Url.Content("~/Content/img/sample_bg.jpg") id="page-4-img" alt="Contact">
    </div>

    <div class="container-fluid">

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5 col-xl-5">

                <div class="header">

                    <!-- site title -->
                    <header class="box box-black">
                        <a href="javascript:void(0)" class="js-site-title ">
                            <h1 class="box-text site-title-text">@Html.DisplayFor(model => model.Nom)</h1>
                        </a>
                    </header>

                    <!-- site navigation -->
                    <nav class="js-nav">
                        <ul class="nav-items-container">

                            <li data-nav-item-id="page-1" class="block-keep-ratio block-keep-ratio-1-1 block-width-half box box-black box-nav-item js-nav-item pull-xs-left">
                                <a href="#page-1" class="block-keep-ratio-content box-nav-item-link">
                                    <span class="box-text box-text-nav-item flexbox-center">About</span>
                                </a>
                            </li>
                            <li data-nav-item-id="page-3" class="block-keep-ratio block-keep-ratio-1-1 block-width-half box box-black box-nav-item js-nav-item pull-xs-left">
                                <a href="#page-3" class="block-keep-ratio-content box-nav-item-link">
                                    <span class="box-text box-text-nav-item flexbox-center">Infos</span>
                                </a>
                            </li>
                            <li data-nav-item-id="page-4" class="block-keep-ratio block-keep-ratio-1-1 block-width-half box box-black box-nav-item js-nav-item pull-xs-right">
                                <a href="#page-4" class="block-keep-ratio-content box-nav-item-link">
                                    <span class="box-text box-text-nav-item flexbox-center">Comments</span>
                                </a>
                            </li>

                            <li data-nav-item-id="page-2" class="block-keep-ratio block-keep-ratio-1-1 block-width-half box box-black box-nav-item js-nav-item pull-xs-right">
                                <a href="#page-2" class="block-keep-ratio-content box-nav-item-link">
                                    <span class="box-text box-text-nav-item flexbox-center">Gallery</span>
                                </a>
                            </li>





                        </ul>
                    </nav>
                </div> <!-- .header -->

            </div>

            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7 col-xl-7">
                <div class="content-wrapper js-content-wrapper">
                    <!-- about -->
                    <section data-page-id="page-1" class="content js-content">

                        <header class="box box-black margin-b-20">
                            <h2 class="box-text page-title-text">About the experience</h2>
                        </header>

                        <div class="content-text">
                            <p>
                                @Html.DisplayFor(model => model.Description)
                            </p>
                        </div>

                    </section> <!-- #about -->
                    <!-- Information -->
                    <section data-page-id="page-3" class="content js-content">

                        <header class="box box-black margin-b-20">
                            <h2 class="box-text page-title-text">Informations</h2>
                        </header>

                        <div class="content-text">

                            <h4>@Html.DisplayNameFor(model => model.note)</h4>
                            <p>
                                @Html.DisplayFor(model => model.note)
                            </p>
                            <h4>@Html.DisplayNameFor(model => model.type)</h4>
                            <p>
                                @Html.DisplayFor(model => model.type)
                            </p>
                            <h4>@Html.DisplayNameFor(model => model.Date)</h4>
                            <p>
                                @Html.DisplayFor(model => model.Date)
                            </p>


                        </div>

                    </section> <!-- #Information -->
                    <!-- gallery -->
                    <section data-page-id="page-2" class="content content-gallery js-content">

                        <header class="box box-black margin-b-20">
                            <h2 class="box-text page-title-text">Galllery</h2>
                        </header>

                        <div class="content-text content-text-gallery">

                            <!-- <p>Credits go to <a rel="nofollow" href="http://unsplash.com">Unsplash</a> for images.</p> -->

                            <div class="flexslider-wrapper">

                                <div id="slider" class="flexslider">
                                    <ul class="slides">
                                        @foreach (var item in (Model.ListImage))
{

                                            <li><img alt="image1" src="~/Content/Upload/@item.nom"></li>
}
                                    </ul>
                                </div> <!-- #slider -->


                            </div>

                        </div>

                    </section> <!-- #gallery -->
                    <!-- contact -->
                    <section data-page-id="page-4" class="content js-content">

                        <header class="box box-black margin-b-20">
                            <h2 class="box-text page-title-text">Comments</h2>
                        </header>

                        <div class="content-text">
                            <p>
                                Please give us your opinion by commenting our page
                            </p>
                            <form action="index.html" method="post" class="contact-form">

                                <div class="form-group">
                                    <textarea id="contact_message" name="contact_message" class="form-control" rows="4" placeholder="Comment" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary submit-btn">Comment</button>

                            </form>
                        </div>

                    </section> <!-- #contact -->
                </div>
            </div>

        </div>



    </div>  <!-- .container-fluid -->
    <!-- === BEGIN FOOTER === -->
    <div id="content-bottom-border" class="container">
    </div>
    <div id="base">
        <div class="container padding-vert-30 margin-top-60">
            <div class="row">
                <!-- Contact Details -->
                <div class="col-md-4 margin-bottom-20">
                    <h3 class="margin-bottom-10">Contact Details</h3>
                    <p>
                        <span class="fa-phone">Telephone:</span>(212)888-77-88
                        <br>
                        <span class="fa-envelope">Email:</span>
                        <a href="mailto:info@joomla51.com">info@joomla51.com</a>
                        <br>
                        <span class="fa-link">Website:</span>
                        <a href="http://www.joomla51.com">www.joomla51.com</a>
                    </p>
                    <p>
                        The Dunes, Top Road,
                        <br>Strandhill,
                        <br>Co. Sligo,
                        <br>Ireland
                    </p>
                </div>
                <!-- End Contact Details -->
                <!-- Sample Menu -->
                <div class="col-md-3 margin-bottom-20">
                    <h3 class="margin-bottom-10">Sample Menu</h3>
                    <ul class="menu">
                        <li>
                            <a class="fa-tasks" href="#">Placerat facer possim</a>
                        </li>
                        <li>
                            <a class="fa-users" href="#">Quam nunc putamus</a>
                        </li>
                        <li>
                            <a class="fa-signal" href="#">Velit esse molestie</a>
                        </li>
                        <li>
                            <a class="fa-coffee" href="#">Nam liber tempor</a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <!-- End Sample Menu -->
                <div class="col-md-1"></div>
                <!-- Disclaimer -->
                <div class="col-md-3 margin-bottom-20 padding-vert-30 text-center">
                    <h3 class="color-gray margin-bottom-10">Join our Newsletter</h3>
                    <p>
                        Sign up for our newsletter for all the
                        <br>latest news and information
                    </p>
                    <input type="email">
                    <br>
                    <button class="btn btn-primary btn-lg margin-top-20" type="button">Subscribe</button>
                </div>
                <!-- End Disclaimer -->
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!-- Footer Menu -->

    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div><!-- /#preloader -->
    <!-- load JS files -->
    <script src="@Url.Content("~/Content/jsPage/jquery-1.11.3.min.js")"></script> <!-- jQuery -->
    <script src="@Url.Content("~/Content/jsPage/jquery.flexslider-min.js")"></script> <!-- Flex Slider -->
    <script src="@Url.Content("~/Content/jsPage/jquery.backstretch.min.js")"></script> <!-- Backstretch http://srobbin.com/jquery-plugins/backstretch/ -->
    <script src="@Url.Content("~/Content/jsPage/templatemo-script.js")"></script> <!-- Templatemo scripts -->

</body>


