@model IEnumerable<Projet.Models.ExperienceModels>

<body>
    <div id="body-bg">
        <ul class="social-icons pull-right hidden-xs">
            <li class="social-rss">
                <a href="#" target="_blank" title="RSS"></a>
            </li>
            <li class="social-twitter">
                <a href="#" target="_blank" title="Twitter"></a>
            </li>
            <li class="social-facebook">
                <a href="https://www.facebook.com/groups/1391877770839774/?fref=ts" target="_blank" title="Facebook"></a>
            </li>
            <li class="social-googleplus">
                <a href="#" target="_blank" title="GooglePlus"></a>
            </li>
        </ul>
        <div id="pre-header" class="container" style="height:340px">
        </div>
        <div id="header">
            <div class="container">
                <div class="row">
                    <!-- Logo -->
                    <div class="logo">
                        <a href="index.html" title="">
                            <img src=@Url.Content("~/Content/img/logo.png") alt="Logo" />
                        </a>
                    </div>
                    <!-- End Logo -->
                </div>
            </div>
        </div>
        <!-- Top Menu -->
        <div id="hornav" class="container no-padding">
            <div class="row">
                <div class="col-md-12 no-padding">
                    <div class="text-center visible-lg">
                        <ul id="hornavmenu" class="nav navbar-nav">
                            <li>
                                @Html.ActionLink("Home", "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Experience", "Index", "Experience")
                            </li>
                            <li>
                                @Html.ActionLink("Offers", "Index", "Offer")
                            </li>
                            <li>
                                @Html.ActionLink("Events", "Index", "Event")
                            </li>
                            <li>
                                @Html.ActionLink("Contact", "Contact", "Home")
                            </li>
                            @Html.Partial("_LoginPartial")
                        </ul>


                    </div>
                </div>
            </div>
        </div>
        <!-- End Top Menu -->

        <br />
        <br />
        <!-- === CONTENT === -->
        <div id="content">
            <div class="container background-gray-lighter">
                <div class="row padding-vert-20">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-10">
                        <!-- Portfolio -->
                        <ul class="portfolio-group">
                            @foreach (var item in Model)
                            {
                        <!-- Portfolio Item -->
                                <li class="portfolio-item col-sm-6 col-xs-6 padding-20">
                                    <a href="">
                                        <figure class="animate fadeInLeft">
                                            <img alt="image1" src="~/Content/Upload/@Html.DisplayFor(modelItem => item.ListImage.ElementAtOrDefault(0).nom)">

                                            <figcaption>
                                                <h3>@Html.DisplayFor(modelItem => item.Nom)</h3>
                                                <span>@Html.DisplayFor(modelItem => item.Description)</span>
                                            </figcaption>
                                        </figure>
                                    </a>
                                    <a href='@Url.Action("Details", "Experience", new { id=item.TPFK,d = item.Date.ToString(),u=item.UserFK })'><img alt="view" src="~/Content/img/view.png"></a>
                                    <a href='@Url.Action("Edit", "Experience", new { id=item.TPFK,d = item.Date.ToString(),u=item.UserFK  })'><img alt="edit" src="~/Content/img/edit.png"></a>
                                    <a href='@Url.Action("Delete", "Experience", new { id=item.TPFK,d = item.Date.ToString(),u=item.UserFK })'><img alt="supprime" src="~/Content/img/delete.png"></a>

                                </li>

                        <!-- //Portfolio Item// -->
                            }
                        </ul>
                        <!-- End Portfolio -->
                    </div>
                    <div class="col-md-1">
                    </div>
                </div>
            </div>
        </div>
        <!-- === END CONTENT === -->
    
</body>
<!-- === BEGIN FOOTER === -->

