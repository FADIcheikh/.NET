        <!-- End Footer Menu -->
        <!-- JS -->
        <script type="text/javascript" src=@Url.Content("~/Content/js/jquery.min.js") type="text/javascript"></script>
        <script type="text/javascript" src=@Url.Content("~/Content/js/bootstrap.min.js") type="text/javascript"></script>
        <script type="text/javascript" @Url.Content("~/Content/js/scripts.js")></script>
