                </div>
            </div>
        </div>
        <!-- Footer Menu -->
        <!-- End Footer Menu -->
        <!-- JS -->
        <script type="text/javascript" src=@Url.Content("~/Content/js/jquery.min.js") type="text/javascript"></script>
        <script type="text/javascript" src=@Url.Content("~/Content/js/bootstrap.min.js") type="text/javascript"></script>
        <script type="text/javascript" @Url.Content("~/Content/js/scripts.js")></script>
        <!-- Isotope - Portfolio Sorting -->
        <script type="text/javascript" @Url.Content("~/Content/js/jquery.isotope.js") type="text/javascript"></script>
        <!-- Mobile Menu - Slicknav -->
        <script type="text/javascript" @Url.Content("~/Content/js/jquery.slicknav.js") type="text/javascript"></script>
        <!-- Animate on Scroll-->
        <script type="text/javascript" @Url.Content("~/Content/js/jquery.visible.js") charset="utf-8"></script>
        <!-- Sticky Div -->
        <script type="text/javascript" @Url.Content("~/Content/js/jquery.sticky.js") charset="utf-8"></script>
        <!-- Slimbox2-->
        <script type="text/javascript" @Url.Content("~/Content/js/slimbox2.js") charset="utf-8"></script>
        <!-- Modernizr -->
        <script @Url.Content("~/Content/js/modernizr.custom.js") type="text/javascript"></script>
        <!-- End JS -->
        </body>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
